<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FishDetailFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/fish_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="40sp"
            tools:text="Fish"/>

        <ImageView
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:id="@+id/fish_detail_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_gravity="center"
            tools:src="@sample/drawable"/>

        <TextView
            android:id="@+id/fish_detail_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="&quot;Description of fish&quot;"/>

        <View
            style="@style/Widget.FishInfo.Divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/divider_margin"
            android:layout_marginBottom="@dimen/divider_margin"/>

    </LinearLayout>

</FrameLayout>